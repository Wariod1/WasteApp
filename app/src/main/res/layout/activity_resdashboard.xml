<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#4CAF50">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#4CAF50"
        android:padding="8dp"
        android:text="Resident Dashboard"
        android:textColor="#0D47A1"
        android:textSize="28sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_marginTop="20dp"
        android:text="Special Request"
        android:textSize="18sp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:iconTint="#FFFFFF"
        app:iconPadding="8dp" />



    <Button
        android:id="@+id/btnViewSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPick"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:gravity="center"
        android:text="View Schedule"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnViewAcceptedRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnViewSchedule"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:gravity="center"
        android:text="View Accepted request"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnViewAcceptedRequests"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:gravity="center"
        android:text="View Price for Services"
        android:textSize="18sp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnViewPrice"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="#17DCB4"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:iconPadding="8dp"
        app:iconTint="#FFFFFF" />

</RelativeLayout>